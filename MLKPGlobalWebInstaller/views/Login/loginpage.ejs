<% include ../layouts/modalinfo %>
<% include ../layouts/modalsess %>

<form id="frmLogin" method="POST" action="Login" novalidate="novalidate" >
  <div class="default-page centerthings">
      <div class="loginInfo">
        <div class="form-group col-md-12">
          <center><label><b>Log in Authentication</b></label></center>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text iconsize"><i class="fa fa-user fa-2x"></i></span>
            </div>
            <input type="text" class="form-control" name="uname" id="unameid" data-val="true" required placeholder="Username" aria-label="Username" >
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text iconsize"><i class="fa fa-lock fa-2x" ></i></span>
            </div>
            <input type="password" class="form-control" id="passid" name="pass" data-val="true" required placeholder="Password" aria-label="Password">
            <span><i class="fa fa-eye eyeicon eyehide" id="eyepass"></i></span>
        </div>
        <center> 
            <div id="iderrval" style="color:red; margin-top: -10px; display: block;">
              <label><%= errdata %></label>
            </div>
        </center>
       <center>
        <div class="form-group col-md-12 " >
              <button type="submit" class="btn btn-danger loginbtn" id="btnLogIn">
                <span><i class="fa fa-sign-in alignicon"></i>&nbsp;&nbsp;Log in</span> 
              </button>
          </div>
        </center>
      </div>
  </div>
</form>

